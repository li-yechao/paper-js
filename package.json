  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "format": "prettier --check .",
    "dev": "nest start --watch --",
    "build": "nest build",
    "start": "node dist/main",
    "test": "jest",
    "version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.6",
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.4.0",
